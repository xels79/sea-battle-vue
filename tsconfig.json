{
    "compilerOptions": {
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "noEmit": false,
        "verbatimModuleSyntax": false,
        "isolatedModules":false,
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ],
    },
    "plugins": [
        {
            "transform": "tsc-progress",
            "title": "TSC"
        }
    ],    
    "exclude": [
        "node_modules"
    ],    
    "files":[
        "./client/main.ts"
    ],
    "extends": [
        "@vue/tsconfig/tsconfig.dom.json",
    ],
}